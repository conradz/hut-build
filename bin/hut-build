#!/usr/bin/env node
/*jshint node: true */

var build = require('../'),
    parser = require('nomnom');

parser
    .script('hut-build')
    .help('Automate build tasks for HUT projects');

parser.command('test')
    .help('Run tests in Sauce Labs')
    .callback(function() {
        build.test(done);
    });

parser.command('lint')
    .help('Lint JS files')
    .callback(function() {
        build.lint(done);
    });

parser.command('build')
    .help('Build files')
    .option('debug', {
        help: 'Include source maps in generated JS',
        abbr: 'd'
    })
    .callback(function() {
        build.build(done);
    });

parser.command('serve')
    .help('Serve files and build when files change')
    .option('debug', {
        help: 'Include source maps in generated JS',
        abbr: 'd'
    })
    .option('port', {
        help: 'Port for the HTTP server',
        metavar: 'PORT',
        abbr: 'p'
    })
    .callback(function() {
        build.serve(done);
    });

parser.parse();

function done(err) {
    if (err) {
        console.error(err);
        process.exit(1);
    } else {
        process.exit(0);
    }
}
